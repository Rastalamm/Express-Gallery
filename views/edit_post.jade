include mixin
extends base
block append body
  h1 A Picture
  h2!= author
  div.post_house
    +picturePost(picture)
      +goHome
      +deleteButton(picture)



  div
    h1 edit the post
    form(method='POST', action='/gallery/#{picture.id}')
      br
      input(
      type='hidden'
      name='_method'
      value='PUT'
        )
      input(
        type='text'
        name='author'
        placeholder='your name'
        autocomplete='off'
        required
        )
      br
      input(
        type='url'
        name='link'
        placeholder='link to photo'
        autocomplete='off'
        required
        )
      br
      input(
        type='text'
        name='description'
        placeholder='description'
        autocomplete='off'
        required
        )
      br
      input(
        type='submit'
        )