include mixin
extends base
block append body
  h1 A Picture
  div
    form(method='POST' )
      br
      input(
        type='text'
        name='author'
        placeholder='your name'
        autocomplete='off'
        required
        )
      br
      input(
        type='url'
        name='link'
        placeholder='link to photo'
        autocomplete='off'
        required
        )
      br
      input(
        type='text'
        name='description'
        placeholder='description'
        autocomplete='off'
        required
        )
      br
      input(
        type='submit'
        )
  +goHome