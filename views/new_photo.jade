include mixin
extends base
block append body
  +headingSection
  div.small-6.medium-6.small-centered.columns
    form(method='POST')
      br
      input(
        type='text'
        name='author'
        placeholder='your name'
        autocomplete='off'
        required
        )
      br
      input(
        type='url'
        name='link'
        placeholder='link to photo'
        autocomplete='off'
        required
        )
      br
      input(
        type='text'
        name='description'
        placeholder='description'
        autocomplete='off'
        required
        )
      br
      div.row.buttons_row
        div(class='small-4 columns ')
          button.formButtons(type='Submit') Submit
        div(class='small-4 columns')
          +goHome