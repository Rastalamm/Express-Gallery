include mixin
extends base
block append body
  +headingSection
  div.row
    div.small-10.medium-6.small-centered.columns
      form(method='POST')
        input(
          type='text'
          name='author'
          placeholder='your name'
          autocomplete='off'
          required
          )
        input(
          type='url'
          name='link'
          placeholder='link to photo'
          autocomplete='off'
          required
          )
        input(
          type='text'
          name='description'
          placeholder='description'
          autocomplete='off'
          required
          )
        div.row.new_upload_buttons_row
          div(class='small-6 medium-4 columns ')
            button.formButtons(type='Submit') Submit
          div(class='small-6 medium-4 columns')
            +goHome